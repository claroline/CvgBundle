{% extends "ClarolineCoreBundle:Layout:topBarItems.html.twig" %}

{% block topBar %}
    {% if isLogged %}
        <div id="top_bar" class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    {% if config.getParameter('logo') != "" %}
                        <a class="navbar-brand logo" href="{{ path('claro_index') }}" title="{{ 'home' | trans({}, "platform") }}">
                            <img src="{{ asset("") ~ "uploads/logos/" ~ config.getParameter('logo') }}" height="35"
                                {% if config.getParameter('name') != "" %}alt="{{ config.getParameter('name') }}"{% endif %}>
                        </a>
                    {% endif %}
                    {% if config.getParameter('name') != "" and config.getParameter('nameActive') %}
                        <a class="navbar-brand" href="{{ path('claro_index') }}">
                            {{ config.getParameter('name') }}
                        </a>
                    {% endif %}
                </div>
                <div class="navbar-collapse collapse">
                    {% if not isLogged and homeMenu is defined and not homeMenu is empty %}
                        {% if headerLocale %}
                            <div class="navbar-form navbar-right clearfix">
                                <button class="pull-right locale-select btn btn-default">{{ app.request.locale | upper }}</button>
                            </div>
                        {% endif %}
                        <ul class="nav navbar-nav navbar-right">
                            {% for item in homeMenu %}
                                {% if item.content.title is defined %}
                                    <li>
                                        <a{% if item.content.content is defined %} href="{{ item.content.content | homeLink }}" title="{{ item.content.getTitle() }}"{% endif %} >
                                            {{ item.content.getTitle() }}
                                        </a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    {% else %}
                        <ul class="nav navbar-nav">
                            {% if isLogged %}{{ block('leftSide') }}{% endif %}
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            {{ block('rightSide') }}
                            {% if isLogged %}
                                {{ block('logged') }}
                            {% else %}
                                {{ block('login') }}
                            {% endif %}

                            {% if showHelpButton %}
                                <li>
                                    <a href="{{ helpUrl }}">
                                        <i class="fa fa-question-circle"></i>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    {% else %}
    <div id="top_bar" class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header" style="text-align: left">
                <a class="navbar-brand" href="#">Campus virtuel en gestion</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="#" title="Retour à l'accueil de la plateforme CVG">Accueil</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" title="Programme - Cliquez pour ouvrir le menu déroulant">Programme
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#" title="Cliquez pour obtenir une description des modules">Description des modules</a></li>
                        <li><a href="#">Pitch</a></li>
                        <li><a href="#">Compétences</a></li>
                        <li><a href="#">Thématiques</a></li>
                        <li><a href="#">Equipe pédagogique</a></li>
                        <li><a href="#">Vidéo témoignage</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">e-Accompagnement
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Etapes</a></li>
                        <li><a href="#">Objectifs</a></li>
                        <li><a href="#">Nombre d'heures</a></li>
                        <li><a href="#">Coach</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Equipe
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Corps professoral (par module)</a></li>
                        <li><a href="#">Comité scientifique</a></li>
                        <li><a href="#">Equipe projet</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Inscription
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Processus de sélection</a></li>
                        <li><a href="#">Dossier de candidature</a></li>
                        <li><a href="#">Coût</a></li>
                        <li><a href="#">Echéances</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">CVG
                        <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Description du projet</a></li>
                        <li><a href="#">Historique</a></li>
                        <li><a href="#">...</a></li>
                    </ul>
                </li>
                <li><a href="#">Blog</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                {{ block('rightSide') }}
                {{ block('login') }}
            </ul>
        </div>
    </div>

    {% endif %}

{% endblock %}
