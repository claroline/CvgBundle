{% block content %}

    <div id="conteneur" class="container-fluid site-text">
        <div id="section-id-page">
            <div class="container-fluid">
                <h2 class="nom-de-page" style="padding-top:25px; text-align: center">CVG</h2>
                <h3 style="text-align: center"></h3>
                <p class="page-location" style="padding-top:15px">
                    <a href="description_projet">Description du projet | </a>
